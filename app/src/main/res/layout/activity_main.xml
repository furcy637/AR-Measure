<?xml version="1.0" encoding="utf-8"?>
<!--
    Ana ekran layout dosyası
    ARSceneView: Kamera görüntüsü ve AR içeriği gösterilir
    TextView: Ölçüm sonuçlarını gösterir
    Butonlar: Mod değiştirme ve temizleme işlemleri için
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- AR Sahne Görünümü - Kamera ve 3D içerik burada gösterilir -->
    <io.github.sceneview.ar.ARSceneView
        android:id="@+id/arSceneView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Nokta gösterimi için overlay view -->
    <com.example.ar_measure.PointOverlayView
        android:id="@+id/pointOverlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Üst bilgi paneli - Kullanıcıya talimat verir -->
    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:padding="12dp"
        android:text="Yüzey taranıyor... Telefonu yavaşça hareket ettirin."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Ölçüm sonucu gösterimi -->
    <TextView
        android:id="@+id/measurementText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:background="#CC000000"
        android:padding="16dp"
        android:text=""
        android:textColor="#00FF00"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Alt buton paneli -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Mod değiştirme butonu - Mesafe/Alan modları arasında geçiş -->
        <Button
            android:id="@+id/modeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Mod: Mesafe"
            android:textSize="12sp" />

        <!-- Tüm noktaları ve çizgileri temizle -->
        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Temizle"
            android:textSize="12sp" />

        <!-- Alan hesapla butonu - sadece alan modunda görünür -->
        <Button
            android:id="@+id/calculateAreaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Alan Hesapla"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

